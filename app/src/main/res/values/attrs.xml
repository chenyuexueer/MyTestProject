<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="a_zhon">
        <!--每条线的粗细-->
        <attr name="paintBold" format="dimension"/>
        <!--每条线的长度-->
        <attr name="lineLength" format="dimension"/>
        <!--线条个数-->
        <attr name="lines" format="integer"/>
        <!--最大进度-->
        <attr name="max" format="integer"/>
        <!--当前进度-->
        <attr name="progress" format="integer"/>
        <!--背景的颜色-->
        <attr name="backgroundColor" format="reference|color"/>
        <!--前景的颜色-->
        <attr name="beforeColor" format="reference|color"/>
        <!--进度文字颜色-->
        <attr name="textColor" format="reference|color"/>
    </declare-styleable>


    <!--自定义view    日历选择器   的属性-->
    <declare-styleable name="calendarview">
        <attr name="backgroundColor" />
        <attr name="textColor" />
        <attr name="weeks_color" format="color" />
        <attr name="selected_color" format="color" />
        <attr name="today_color" format="color" />
        <attr name="year" format="integer" />
        <attr name="month" format="integer" />
        <attr name="today" format="integer" />
        <attr name="selected" format="integer" />
    </declare-styleable>




</resources>