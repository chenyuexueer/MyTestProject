<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--my_view_test的activity_my_view_test的AppBarLayout的==========start-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--需要在Androidmanifest.xml中使用-->
    <!--my_view_test的activity_my_view_test的AppBarLayout的==========end-->

    <!--===================滚轮控件的动画============start-->
    <!-- 弹出框动画 由下至上 -->
    <style name="dialogstyle_vertical" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <!-- 进入时的动画 -->
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
        <!-- 退出时的动画 -->
        <!--<item name="@android:windowEnterAnimation">@anim/slide_in_from_bottom</item>-->
        <!-- 进入时的动画 -->
        <!--<item name="@android:windowExitAnimation">@anim/slide_out_to_bottom</item>-->
        <!-- 退出时的动画 -->
    </style>
    <!--===================滚轮控件的动画=============end-->


</resources>
